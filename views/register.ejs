<body>
    <div id="wrapper">
        <div class="spacer"></div>
        <div id="loginContent">
            <h1>Waa Register</h1>
            <h2><span class="unbold">Complain Everyday</span></h2>
            <br><br>
            <h2><span class="unbold">Register here</span></h2>
            <form action="/register" method="POST">
                <div>
                    <label for="name">Name</label><br>
                    <label for="email">Email</label><br>
                    <label for="password">Password</label>
                </div>
                <div>
                    <input type="name" id="name" name="name" required><br>
                    <input type="email" id="email" name="email" required><br>
                    <input type="password" id="password" name="password" required>
                    
                </div>
                <br>
                <button type="submit">Register</button>
            </form>
            <br><br>
            <h2><span class="unbold">Already have an account? <a href="/login">Sign-in.</a></span></h2>
        </div>
        <div class="spacer"></div>
    </div>
